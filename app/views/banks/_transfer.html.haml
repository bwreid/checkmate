.large-6.columns.large-centered
  = form_tag transfer_amt_banks_path, :remote => true, :class => 'custom' do
    .row
      .small-6.columns
        = label_tag "From"
        = select_tag 'from', options_from_collection_for_select(@banks, "id", "name"), :class => 'custom dropdown medium'
      .small-6.columns
        = label_tag "To"
        = select_tag 'to', options_from_collection_for_select(@banks, "id", "name"), :class => 'custom dropdown medium'
    = label_tag :amount
    = text_field_tag :amount
    = submit_tag nil, :class => 'button success'
    = link_to 'Cancel', '#', :'data-clear-form' => true, :class => 'button alert right'
